<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>HappyBizTrip - {% block title %}{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('css/global') }}
            <link rel="stylesheet" href="/icon/fontawesome/css/all.min.css">
        {% endblock %}
    </head>
    <body>
        {# include header #}
        {% include 'partials/header.html.twig' %}
     
        {% block body %}{% endblock %}
         
        {# include footer #}
        {% include 'partials/footer.html.twig' with {'positionFooter' : 'relative'} %}

        {% block javascripts %}
            {{ encore_entry_script_tags('js/app') }}
            {# flash message management with toastr #}
            {% if (app.session.flashbag.peek('success')|length >0) or (app.session.flashbag.peek('error')|length >0) %}
                <script>
                    toastr.options = {
                        "closeButton": true,
                        "debug": false,
                        "newestOnTop": false,
                        "progressBar": true,
                        "positionClass": "toast-top-left",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "slideUp",
                        'escapeHtml': true
                    }
                </script>
                {% for label, messages in app.flashes(['success', 'error']) %}
                    {% for message in messages %}    
                        <script>toastr["{{ label }}"]("{{ message|trans }}")</script>
                    {% endfor %}
                {% endfor %}
            {% endif %}
        {% endblock %}
    </body>
</html>

