{% extends 'base.html.twig' %}

{% block title %}{% trans %}Welcome{% endtrans %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/home') }}
{% endblock %}

{% block body %}
    <nav id="navhome" class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #ffffff;">
        <a class="navbar-brand" href="#">
            <img src="{{ asset('img/library/maptrip.png') }}" width="32" height="32" class="d-inline-block align-top" alt="">
            HappyBizTrip
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="#">{% trans %}Home{% endtrans %} <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="#">{% trans %}Features{% endtrans %}</a>
                <a class="nav-item nav-link" href="#">{% trans %}Pricing{% endtrans %}</a>
                <a class="nav-item nav-link" href="#">{{ locale }}</a>
            </div>
            <ul class="navbar-nav ml-auto mr-4">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="language" aria-haspopup="true" aria-expanded="false">
                        <img class="flags" src="{{ asset('img/library/en.png') }}" alt="en"> En
                    </a>
                    <div class="dropdown-menu dropdown-menu-center" aria-labelledby="language">
                        <a href="#" class="dropdown-item">
                            <img class="flags" src="{{ asset('img/library/fr.png') }}" alt="fr"> Fr
                        </a>
                    </div>
                </li>
            </ul>
            <a href="#">
                <button class="btn btn-outline-dark btn-sm my-2 my-sm-0">{% trans %}Sign in{% endtrans %}</button>
            </a>
        </div>
    </nav>
    
    <div class="jumbotron jumbotron-fluid jumboHome">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <h1 class="display-4 home-title">{% trans %}Welcome to HappyBizTrip {% endtrans %}</h1>
                    <img class="home-img" src="{{ asset('img/library/imgHomepage.png') }}" alt="">
                </div>
                <div class="col-md-4"><p>OK</p></div>
            </div>
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
