                <p class="lead home-title home-subtitle">{% trans %}Make your trip a fun...{% endtrans %}</p>
                <img class="home-img" src="{{ asset('img/library/imgHomepage.png') }}" alt="">
            </div>
            <div class="col-md-4">
                <div class="card mt-1">
                    <div class="card-header text-center card-entete">
                        <h4><strong>{% trans %}Not registered ?{% endtrans %}</strong></h4>
                        <h4><strong>{% trans %}It's time to get started !{% endtrans %}</strong></h4>
                    </div>
                    <form>
                        <div class="card-body">
                            <div class="form-group">
                                <span class="pr-2">{% trans %}I am a{% endtrans %}</span>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" id="radioWoman" name="radioGender" class="custom-control-input" value="W" checked>
                                    <label class="custom-control-label" for="radioWoman"><i class="fas fa-female pr-1"></i>{% trans %}Woman{% endtrans %}</label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" id="radioMan" name="radioGender" class="custom-control-input" value="M">
                                    <label class="custom-control-label" for="radioMan"><i class="fas fa-male pr-1"></i>{% trans %}Man{% endtrans %}</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="pseudo">{% trans %}Pseudonym{% endtrans %}</label>
                                <input type="text" class="form-control" id="pseudo" aria-describedby="pseudoHelp" placeholder="{% trans %}Define a pseudonym{% endtrans %}">
                                <small id="pseudoHelp" class="form-text text-muted">{% trans %}Minimum Length : 5 characters{% endtrans %}</small>
                            </div>
                            <div class="form-group">
                                <label for="email">{% trans %}Email address{% endtrans %}</label>
                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="{% trans %}Enter email{% endtrans %}">
                            </div>
                            <label for="birthday">{% trans %}Date of birth{% endtrans %}</label>
                            <div class="input-group date mb-3" id="date-container">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-calendar-alt"></i>
                                    </span>
                                </div>
                                <input type="text" id="home_register_birthdayDate" name="home_register[birthdayDate]" required="required" class="js-datepicker form-control" />
                            </div>
                            <div class="form-group">
                                <label for="password">{% trans %}Password{% endtrans %}</label>
                                <input type="password" class="form-control" id="Password" aria-describedby="passwordHelp" placeholder="{% trans %}Define a password{% endtrans %}">
                                <small id="passwordHelp" class="form-text text-muted">{% trans %}Minimum Length : 8 characters{% endtrans %}</small>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button type="submit" class="btn btn-register btn-block">{% trans %}Registrer{% endtrans %}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
